<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:ColorValley.Properties"
             x:Class="ColorValley.DataPrivacyPage"
             Title="{x:Static resources:Resources.DataPrivacyPageTitle}"
             >
    <ScrollView>
        <VerticalStackLayout>
            <Button Margin="20" Text="{x:Static resources:Resources.ButtonTextDataPrivacyConsentRemove }" Clicked="RemoveConsentButton_OnClicked" TextColor="Black" BackgroundColor="White"></Button>
            <Label Margin="20" Text="{x:Static resources:Resources.DataPrivacyMainText }" TextColor="White"></Label>
        </VerticalStackLayout>
        
    </ScrollView>
    
</ContentPage>